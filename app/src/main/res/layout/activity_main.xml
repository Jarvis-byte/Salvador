<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/unlo_splash_image"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/unlu_splash_icon" />

    <RelativeLayout
        android:id="@+id/up_down_RL"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@id/logo"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fitsSystemWindows="true">

        <EditText
            android:id="@+id/edit_Text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="000000000" />

        <TextView
            android:id="@+id/send_otp_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edit_Text"
            android:layout_marginTop="20dp"
            android:background="@drawable/unlo_back"
            android:drawableEnd="@drawable/forward"
            android:gravity="start|center"
            android:padding="10dp"
            android:paddingStart="20dp"
            android:text="Send OTP"
            android:textColor="#fff"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/send_otp_txt"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp"
            android:drawableEnd="@drawable/ic_baseline_arrow_forward_24"
            android:drawablePadding="10dp"
            android:gravity="center"
            android:text="MORE LOGIN OPTIONS"
            android:textColor="#fff"
            />
    </RelativeLayout>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:layout_below="@+id/up_down_RL"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="5dp"
        android:background="#bfbfbf" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:text="By signing in you agree to our Terms &amp; Conditions"
        android:textColor="#fff"
        />


</RelativeLayout>